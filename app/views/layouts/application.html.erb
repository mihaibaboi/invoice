<%
  content_class = 'content'
  sidebar_class = 'sidebar'
  if (controller.controller_name == 'invoices' && controller.action_name == 'new')
    content_class = 'content_invoicing'
    sidebar_class = 'sidebar_invoicing'
  end
%>
<!DOCTYPE html>
<html>
<head>
  <title>Invoicing</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id='wrapper'>
  <!-- BEGIN flash notifications area -->
  <% unless flash[:notice].blank? %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <!-- END flash notifications area -->
  <div id='header'>
    <div id='user-control'>
      <%= render(:partial => 'shared/user_control') %>
    </div>
    <div class='clear'></div>

    <h1>This is where the header logo/text would go</h1>
  </div>
  <div id='content-wrapper'>
    <div id='content' class=<%= content_class %>>
      <%= yield %>
    </div>
    <div id='sidebar' class=<%= sidebar_class %>>
      This is where the sidebar content would go
    </div>
  </div>
  <div id='footer'>
    &copy; Mihai Baboi | December 2013
  </div>  
</div>
</body>
</html>
